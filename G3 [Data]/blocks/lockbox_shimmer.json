{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "g3:lockbox_shimmer"
        },
        "components": {
            "minecraft:ticking": {
                "looping": false,
                "range": [
                    1,
                    2
                ],
                "on_tick": {
                    "event": "too_late"
                }
            },
            "minecraft:destroy_time": 200000000,
            "minecraft:map_color": "#615756",
            "minecraft:on_interact": {
                "event": "pick_lock",
                "target": "self",
                "condition": "q.get_equipped_item_name(0) == 'lockpick'"
            }
        },
        "events": {
            "too_late": {
                "run_command": {
                    "command": [
                        "setblock ~ ~ ~ g3:lockbox_waiting"
                    ]
                }
            },
            "pick_lock": {
                "randomize": [
                    {
                        "weight": 1,
                        "run_command": {
                            "command": [
                                "setblock ~ ~ ~ g3:lockbox_opened",
                                "playsound random.click @p"
                            ]
                        }
                    },
                    {
                        "weight": 1,
                        "run_command": {
                            "command": [
                                "setblock ~ ~ ~ g3:lockbox_waiting",
                                "playsound step.chain @p"
                            ]
                        }
                    }
                ]
            }
        }
    }
}